{% for block in section.blocks %}
    <div class="{{section.settings.text_align}}" style="background-color: {{ block.settings.bg_color }}; color: {{ block.settings.text_color }}">
      {{ block.settings.text }}
    </div>
{% endfor %}

{% schema %}
{
  "name": "Announcement Bar",
  "max_blocks": 12,
  "settings" : [
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        {
        "value": "text-left",
        "label": "Text Left"
        },
        {
          "value": "text-center",
          "label": "Text Center"
        },
        {
          "value": "text-right",
          "label": "Text Right"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Color",
          "default": "#000"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
